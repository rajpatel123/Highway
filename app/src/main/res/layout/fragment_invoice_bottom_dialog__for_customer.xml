                    android:layout_height="wrap_content"
                    android:ellipsize="end"
                    android:gravity="end"
                    android:padding="8dp"
                    android:singleLine="true"
                    android:text="#HIG8805"
                    android:textColor="@color/colorPrimaryText"
                    android:textSize="@dimen/text_small" />
